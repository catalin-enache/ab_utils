{
  "name": "ab_utils",
  "version": "0.0.1",
  "description": "ab utils",
  "author": "catalinenache78@gmail.com",
  "license": "MIT",
  "main": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/catalin-enache/ab_utils.git"
  },
  "dependencies": {
    "lodash": "^3.10.1",
    "react": "^0.14.5",
    "react-dom": "^0.14.5"
  },
  "devDependencies": {
	"babel-cli": "^6.3.17",
	"babel-core": "^6.3.21",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "uglify-js": "^2.6.1",

	"babel-jest": "6.0.1",
	"jest-cli": "0.8.2",
	"react-addons-test-utils": "~0.14.5"
  },

  "jest": {
	"scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
	"unmockedModulePathPatterns": [
	  "<rootDir>/node_modules/react",
	  "<rootDir>/node_modules/react-dom",
	  "<rootDir>/node_modules/react-addons-test-utils",
	  "<rootDir>/node_modules/fbjs"
	],
	"moduleFileExtensions": ["js", "jsx"],
	"testFileExtensions": ["js", "jsx"]
  },

  "browserify": {
    "transform": [
      "babelify"
    ]
  },

  "scripts": {
    "setup": "npm install",
    "compile": "browserify --extension=.jsx -o examples/bundle.js examples/demo.jsx",
	"experiment": "browserify -o ./_experiment.js ./experiment.js && node ./_experiment.js && rm -f ./_experiment.js",
	"test": "jest"
  }
}
